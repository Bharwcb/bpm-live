<h1><%= current_user.email %></h1>

<h3>My Sounds:</h3>

<div id="user-tracks">
  <ul>
    <% @tracks.each do |track| %>
      <li>
        <%= track.id  %>
        <%= (track.name != nil) ? "- #{track.name}" : "- no name" %>
        <!-- gave id in link_to so that when click play, JS knows which track to play -->
        - <%= link_to 'play', user_path(@tracks), remote: true, class: 'play-track-from-user-profile', :id => track.id %>
      </li>
    <% end %>
  </ul>
</div>



